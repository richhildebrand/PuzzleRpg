<UserControl x:Class="PuzzleRpg.CustomControls.DungeonSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="200" d:DesignWidth="480">
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Backdrops/LevelSelection.png" Stretch="Fill" />
        </Grid.Background>
        <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center" FontSize="40" Padding="30"/>
    </Grid>
</UserControl>