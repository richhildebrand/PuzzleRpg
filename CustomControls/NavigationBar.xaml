<UserControl x:Class="PuzzleRpg.CustomControls.NavigationBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="100" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Rectangle Grid.Column="0" x:Name="FirstNavigationItem" Height="100" Width="100" Fill="AliceBlue" Tap="FirstNavigationItem_Tap" HorizontalAlignment="Left"/>
        <Rectangle Grid.Column="1" x:Name="SecondNavigationItem" Height="100" Width="100" Fill="Blue" Tag="SecondNavigationItem_Tap" />
        <Rectangle Grid.Column="2" x:Name="ThirdNavigationItem" Height="100" Width="100"  Fill="Yellow" Tag="ThirdNavigationItem_Tap" />
        <Rectangle Grid.Column="3" x:Name="FourthNavigationItem" Height="100" Width="100" Fill="Green" Tag="FourthNavigationItem_Tap" />
    </Grid>
</UserControl>