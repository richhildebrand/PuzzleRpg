<UserControl x:Class="PuzzleRpg.CustomControls.NavigationBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="100" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" HorizontalAlignment="Center"  Background="{StaticResource PhoneChromeBrush}">
        <Rectangle x:Name="FirstNavigationItem" Height="100" Width="100" Margin="30,0,350,0" Fill="AliceBlue" HorizontalAlignment="Stretch"  Tap="FirstNavigationItem_Tap"/>
        <Rectangle x:Name="SecondNavigationItem" Height="100" Width="100" Margin="135,0,245,0" Fill="Blue" HorizontalAlignment="Stretch" Tag="SecondNavigationItem_Tap" />
        <Rectangle x:Name="ThirdNavigationItem" Height="100" Width="100" Margin="345,0,35,0" Fill="Yellow" HorizontalAlignment="Stretch" Tag="ThirdNavigationItem_Tap" />
        <Rectangle x:Name="FourthNavigationItem" Height="100" Width="100" Margin="240,0,140,0" Fill="Green" HorizontalAlignment="Stretch" Tag="FourthNavigationItem_Tap" />
    </Grid>
</UserControl>